<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    >
  </head>
  <body class="flex justify-center items-center h-screen">
    <div class="block p-14 rounded-lg shadow-lg bg-white max-w-sm">
      <form class="text-center" method="post" action="/auth/login">
        <div class="form-group mb-6">
          <label
            for="exampleInputEmail1"
            class="form-label inline-block mb-2 text-gray-700"
            >ID</label
          >
          <input
            type="text"
            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
            id="ID"
            aria-describedby="emailHelp"
            placeholder="Enter email"
            value="Egoing123"
            name="id"
          />
        </div>
        <div class="form-group mb-6">
          <label
            for="exampleInputPassword1"
            class="form-label inline-block mb-2 text-gray-700"
            >Password</label
          >
          <input
            type="text"
            class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
            id="PWD"
            placeholder="Password"
            value="12345"
            name="pwd"
          />
        </div>
        <div class="form-group form-check mb-6"></div>
        <div class="text-cetner">
          <button
            type="submit"
            class="px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
          >
            Submit
          </button>
          <button
            type="button"
            onclick="ChangeUser()"
            class="px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
          >
            First1로 로그인
          </button>
        </div>
      </form>
    </div>
  </body>
  <script>
    const ChangeUser = () => {
      // ID: "First1",
      // pwd: "pwd",
      document.querySelector("#ID").value = "First1";
      document.querySelector("#PWD").value = "pwd";
    };
  </script>
</html>
